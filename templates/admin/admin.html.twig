{% extends "base.html.twig" %}

{% block body %}
    <div class="wrapper__body__menu">
        {% block menu %}
            {% set route = app.request.attributes.get('_route') %}
            <a class="wrapper__body__menu__option {{ route == 'admin_set_refreshTime' ? 'wrapper__body__menu__option--active' }}"
               href="{{ path('admin_set_refreshTime') }}">Default time</a>
            <a class="wrapper__body__menu__option {{ route == 'admin_add_device' ? 'wrapper__body__menu__option--active' }}"
               href="{{ path('admin_add_device') }}">Add device</a>
            <a class="wrapper__body__menu__option {{ route == 'admin_users' ? 'wrapper__body__menu__option--active' }}"
               href="{{ path('admin_users') }}">Manage users</a>
            <a class="wrapper__body__menu__option {{ route == 'log_index' ? 'wrapper__body__menu__option--active' }}"
               href="{{ path('log_index') }}">App log</a>
            <a class="wrapper__body__menu__option {{ route == 'deploy_options_list' ? 'wrapper__body__menu__option--active' }}"
               href="{{ path('deploy_options_list') }}">Deploy app</a>
        {% endblock %}
    </div>
    <div class="wrapper__body__content">
        <div class="wrapper__body__content__box">
            {% block content %}{% endblock %}
        </div>
    </div>
{% endblock %}